{
  "compilerOptions": {
    // 目标代码的模块结构版本
    "target": "esnext",
    "module": "es6",
    "removeComments": false,
    // 允许未执行的代码不报错
    "allowUnreachableCode": true,
    // 严格模式, 强烈建议开启
    "strict": true,
    // 支持别名导入:
    // import * as React from "react"
    "esModuleInterop": true,
    // 保留 const和 enum声明
    "preserveConstEnums": true,
    // 额外支持解构/forof等功能
    "downlevelIteration": true,
    // 是否生成声明文件
    "declaration": true,
    "declarationDir": "./lib",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "sourceMap": false,
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "./lib",
    "noImplicitThis": false,
    "pretty": true,
    "allowJs": true,
    "typeRoots": [
      "node_modules/@types",
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "output",
    "lib",
    "test"
  ],
  "include": [
    "./src",
  ],
  "compileOnSave": false,
  "forceConsistentCasingInFileNames": false,
}